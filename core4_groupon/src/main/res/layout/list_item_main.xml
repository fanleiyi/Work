<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="86dp">

    <TextView
        android:id="@+id/list_text_name"
        android:text="掌上披萨"
        android:layout_toStartOf="@+id/list_text_sold"
        android:layout_above="@+id/list_text_intro"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:maxLines="1"
        android:layout_toEndOf="@+id/list_image_photo"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/list_text_intro"
        android:layout_centerVertical="true"
        android:text="多汁披萨6寸1份"
        android:maxLines="1"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:layout_toStartOf="@+id/list_text_sold"
        android:textSize="13sp"
        android:layout_toEndOf="@+id/list_image_photo"
        android:textColor="#555"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/list_text_￥"
        android:text="￥"
        android:layout_below="@+id/list_text_intro"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/list_image_photo"
        android:textColor="#ff6600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/list_text_cost"
        android:text="13.5"
        android:layout_below="@+id/list_text_intro"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/list_text_￥"
        android:textColor="#ff6600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/list_text_distance"
        android:layout_alignParentRight="true"
        android:text="2km"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="#555"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
 <TextView
        android:id="@+id/list_text_sold"
        android:layout_alignParentRight="true"
        android:text="已售666"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:textSize="12sp"
        android:textColor="#555"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/list_image_photo"
        android:src="@drawable/bucket_no_picture"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>