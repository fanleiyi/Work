<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tarena.fanly.ui.MainActivity">

    <include layout="@layout/actionbar_main"/>

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/ptrlv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <include
            android:layout_gravity="right"
            layout="@layout/menu_add_main"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/include_main_menu"
            android:visibility="invisible"
            />

    </FrameLayout>

    <include layout="@layout/bottom_layout_main"/>

</LinearLayout>
