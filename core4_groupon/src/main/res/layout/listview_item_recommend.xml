<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="96dp">

    <ImageView
        android:id="@+id/image_recommend_item1"
        android:src="@drawable/tuijian1"
        android:layout_width="78dp"
        android:layout_height="78dp" />

    <TextView
        android:id="@+id/text_recommend_item1"
        android:text="一波现金券@你"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/image_recommend_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="毕业季一起对话童年"
        android:textColor="#777777"
        android:id="@+id/text_recommend_item2"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/image_recommend_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>