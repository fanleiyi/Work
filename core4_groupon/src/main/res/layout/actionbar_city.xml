<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <ImageView
        android:id="@+id/iv_city_back"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:src="@drawable/yy_calendar_icon_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <RadioButton
            android:id="@+id/action_city_radio1"
            android:paddingLeft="20dp"
            android:checked="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="20dp"
            android:button="@null"
            android:layout_gravity="center"
            android:background="@drawable/selector_btn_city_01"
            android:text="全部"
            android:textColor="@drawable/selector_text_city_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/action_city_radio2"
            android:button="@null"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="20dp"
            android:background="@drawable/selector_btn_city_02"
            android:layout_gravity="center"
            android:textColor="@drawable/selector_text_city_01"
            android:text="海外"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
</FrameLayout>