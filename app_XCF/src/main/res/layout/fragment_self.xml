<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.day06_03_zhihu.fragment.SelfFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        android:layout_height="48dp">

        <ImageView
            android:layout_marginRight="15dp"
            android:id="@+id/image_action_left"
            android:src="@drawable/createrecipeicon"
            android:layout_gravity="left|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/edit_seek"
            android:layout_width="0dp"
            android:gravity="center"
            android:text="我的"
            android:layout_gravity="center"
            android:textColor="#333333"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/image_action_right"
            android:layout_marginLeft="15dp"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/right_page_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <TextView
            android:id="@+id/text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="28sp"
            android:text="用户名"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/image_photo"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="20sp"
            android:text="账户管理"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:text="密码"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="20sp"
            android:text="通知"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:text="联系我们"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:text="意见反馈"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:text="帮助中心"
            android:layout_margin="10dp"

            android:textColor="#000000"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:text="清除缓存"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
