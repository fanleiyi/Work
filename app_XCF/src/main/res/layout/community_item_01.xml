<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="96dp">
    <ImageView
        android:id="@+id/image_comm_photo"
        android:src="@mipmap/png_01"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_comm_name"
        android:text="name"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/image_comm_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_comm_body"
        android:text="xxxxxxxxxxxxxxxxxxxxxx"
        android:textSize="18sp"
        android:textColor="#afafaf"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/image_comm_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="2017-5-25"
        android:layout_margin="20dp"
        android:layout_alignParentRight="true"
        android:id="@+id/text_comm_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>